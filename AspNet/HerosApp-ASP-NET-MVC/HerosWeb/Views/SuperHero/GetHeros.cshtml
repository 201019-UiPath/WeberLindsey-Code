@model IEnumerable<HerosDB.Models.SuperHero>

@{
    ViewData["Title"] = "Get Heros";
}

<h1>GetHeros</h1>

<p>
    <a asp-action="AddHero">Create New Super Hero</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RealName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Alias)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HideOut)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RealName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Alias)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HideOut)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditHero", new {name = item.Alias}) |
                @Html.ActionLink("Details", "GetHeroByName", new { name = item.Alias }) | <!--to target in a different folder, ("Details", "Index", "Home") -->
                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
            </td>
        </tr>
}
    </tbody>
</table>
